{
  "name": "bitconnect-carlos-ipsum",
  "version": "1.0.0",
  "description": "Bitconnect Carlos Matos Lorem Ipsum Generator",
  "author": "Mike Lowe",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanillaSlice/BitconnectCarlosIpsum.git"
  },
  "private": true,
  "dependencies": {
    "npm": "^5.8.0"
  },
  "scripts": {
    "postinstall": "run-p install:server install:client",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "start": "run-p start:server start:client",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "build": "run-p build:client",
    "build:client": "cd client && npm run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.2"
  }
}
